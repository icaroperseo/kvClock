#:kivy 1.9.1

<RobotoLabel@Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    background_down: 'assets/img/button_down.png'
    background_normal: 'assets/img/button_normal.png'
    bold: True
    border: (2, 2, 2, 2)
    font_name: 'Roboto'
    font_size: 25

<ClockUI>:
    orientation: 'vertical'

    RobotoLabel:
        text: '[b]00[/b]:00:00'

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            text: 'Start'

        RobotoButton:
            background_down: 'assets/img/red_button_down.png'
            background_normal: 'assets/img/red_button_normal.png'
            text: 'Reset'

    RobotoLabel:
        text: '00:00.[size=40]00[/size]'